{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9999" // Port của Gateway
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/change-password",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000 // Port của Node Auth Service
        }
      ],
      "UpstreamPathTemplate": "/gateway/auth/change-password",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "DownstreamPathTemplate": "/api/Urls",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6996 // Port của .NET Service
        }
      ],
      "UpstreamPathTemplate": "/gateway/urls",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 5,
        "QuotaExceededMessage": "Too Many Requests",
        "HttpStatusCode": 429
      },
      "FileCacheOptions": {
        "Region": "url-cache",
        "TtlSeconds": 15
      }
    },
    {
      "DownstreamPathTemplate": "/redirect/{shortCode}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6996 // Port của .NET Service
        }
      ],
      "UpstreamPathTemplate": "/gateway/urls/redirect/{shortCode}",
      "UpstreamHttpMethod": [ "GET" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 5,
        "QuotaExceededMessage": "Too Many Requests",
        "HttpStatusCode": 429
      },
      "FileCacheOptions": {
        "Region": "url-cache",
        "TtlSeconds": 15
      }
    },
    {
      "DownstreamPathTemplate": "/api/Urls/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6996 // Port của .NET Service
        }
      ],
      "UpstreamPathTemplate": "/gateway/urls/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 5,
        "QuotaExceededMessage": "Too Many Requests",
        "HttpStatusCode": 429
      },
      "FileCacheOptions": {
        "Region": "url-cache",
        "TtlSeconds": 15
      }
    }
  ]
}